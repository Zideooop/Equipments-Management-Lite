.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-top: 60rpx;
  box-sizing: border-box;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.back-btn {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image {
  width: 36rpx;
  height: 36rpx;
}

.setting-section {
  background-color: #fff;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 30rpx 15rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-top: 1px solid #f5f5f5;
}

.setting-item:first-child {
  border-top: none;
}

.setting-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.setting-icon image {
  width: 40rpx;
  height: 40rpx;
}

.setting-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.toggle-item {
  justify-content: space-between;
}

.toggle-switch {
  margin-left: 20rpx;
}

.theme-mode-text {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.theme-colors {
  display: flex;
  margin-left: auto;
  align-items: center;
}

.color-option {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 15rpx;
  border: 2px solid transparent;
}

.color-option.active {
  border-color: #333;
  box-shadow: 0 0 0 2px rgba(51, 51, 51, 0.2);
}

.cache-size, .version-text {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.danger .setting-text {
  color: #e74c3c;
}

.version-info {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin: 60rpx 0;
}
