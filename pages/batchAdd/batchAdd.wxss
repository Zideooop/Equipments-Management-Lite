.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.page-title {
  padding: 30rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.tips {
  padding: 20rpx;
  background-color: #fffbe6;
  border-bottom: 1px solid #eee;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.format-example {
  color: #e63946;
  font-weight: bold;
  display: block;
  margin: 10rpx 0;
}

.form-container {
  padding: 20rpx;
}

.form-container textarea {
  width: 100%;
  min-height: 300rpx;
  background-color: #fff;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.btn-group {
  display: flex;
  padding: 0 20rpx 20rpx;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-default {
  background-color: #fff;
  color: #333;
  border: 1px solid #ddd;
}

.btn-primary {
  background-color: #007aff;
  color: #fff;
}

.btn-success {
  background-color: #34c759;
  color: #fff;
}

.btn-loading {
  background-color: #007aff;
  color: #fff;
  opacity: 0.8;
  width: 100%;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s linear infinite;
  margin-right: 15rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.preview-section {
  padding: 20rpx;
}

.preview-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.invalid-count {
  font-size: 26rpx;
  color: #ff3b30;
  font-weight: normal;
}

.preview-table {
  width: 100%;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1px solid #eee;
}

.table-header {
  display: flex;
  background-color: #f5f7fa;
  border-bottom: 1px solid #eee;
}

.table-body {
  max-height: 400rpx;
  overflow-y: auto;
}

.table-row {
  display: flex;
  border-bottom: 1px solid #eee;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 15rpx 10rpx;
  font-size: 26rpx;
  text-align: center;
  word-break: break-all;
}

.table-header .table-cell {
  font-weight: bold;
  color: #666;
}

.invalid-row {
  background-color: #fff5f5;
}

.invalid-text {
  color: #ff3b30;
}

.valid-text {
  color: #34c759;
}

.invalid-tips {
  margin-top: 15rpx;
  padding: 15rpx;
  background-color: #fff5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.invalid-tips text:first-child {
  color: #ff3b30;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.invalid-tips text:not(:first-child) {
  display: block;
  margin-bottom: 5rpx;
}

.error-message {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 100;
}
