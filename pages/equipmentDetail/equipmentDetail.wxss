/* 基础容器样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding-bottom: 120rpx;
}

/* 加载状态样式 - 确保只在加载时显示灰色遮罩 */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #eee;
  border-top-color: #337ab7;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 器材容器样式 */
.equipment-container {
  padding: 16rpx;
}

/* 状态卡片样式 */
.status-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

/* 器材图片区域样式 */
.equipment-image-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  cursor: pointer;
}

.equipment-image {
  width: 280rpx;
  height: 280rpx;
  object-fit: contain;
  border-radius: 8rpx;
  background-color: #fff;
  padding: 16rpx;
}

.no-image-placeholder {
  width: 280rpx;
  height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.image-preview-hint {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #666;
}

/* 状态卡片头部 */
.status-card-header {
  margin-bottom: 20rpx;
}

.equipment-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.equipment-type {
  font-size: 28rpx;
  color: #666;
}

/* 状态信息样式 */
.status-info {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.status-tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-available {
  background-color: #e6f4ea;
  color: #008000;
}

.status-borrowed {
  background-color: #fff2e8;
  color: #ff7d00;
}

.status-maintenance {
  background-color: #fff8e6;
  color: #ff9800;
}

.status-scrapped {
  background-color: #fce4e7;
  color: #f5222d;
}

.overdue-tag {
  margin-left: 8rpx;
  padding: 2rpx 10rpx;
  background-color: #f5222d;
  color: #fff;
  border-radius: 12rpx;
  font-size: 20rpx;
}

/* 编码显示样式 */
.equipment-code {
  color: #666;
  font-size: 26rpx;
  padding: 6rpx 0;
}

/* 编辑按钮容器 */
.edit-button-container {
  margin-bottom: 24rpx;
}

.edit-button {
  width: 100%;
  background-color: #337ab7;
  color: #fff;
  border-radius: 12rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-button icon {
  margin-right: 12rpx;
}

/* 信息卡片通用样式 */
.info-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.light-card {
  background-color: #fafafa;
  border: 1px solid #f0f0f0;
}

.info-card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

/* 信息网格布局 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx 16rpx;
}

.info-item {
  padding: 12rpx 0;
  border-bottom: 1px solid #f5f5f5;
  grid-column: span 1;
}

.info-item:last-child:nth-child(odd) {
  grid-column: span 2;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  line-height: 1.5;
}

.light-text {
  color: #999;
  font-size: 24rpx;
}

/* 借用信息样式 */
.borrow-info {
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.borrow-info-row {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.borrow-info-row:last-child {
  border-bottom: none;
}

.borrow-label {
  font-size: 26rpx;
  color: #666;
}

.borrow-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  flex: 1;
  padding-left: 20rpx;
}

.overdue-text {
  color: #f5222d;
  margin-left: 8rpx;
  font-weight: bold;
}

/* 操作按钮区域 - 优化按钮样式和交互 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  z-index: 10;
}

.primary-button, .secondary-button, .danger-button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  /* 添加按钮交互效果 */
  transition: all 0.2s ease;
}

.primary-button {
  background-color: #337ab7;
  color: #fff;
}

.primary-button:not([disabled]):active {
  background-color: #286090;
}

.secondary-button {
  background-color: #f0f0f0;
  color: #333;
}

.secondary-button:not([disabled]):active {
  background-color: #e0e0e0;
}

.danger-button {
  background-color: #f5222d;
  color: #fff;
}

.danger-button:not([disabled]):active {
  background-color: #d41414;
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.dialog-container {
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 32rpx 24rpx;
  max-height: 80vh;
  overflow-y: auto;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.dialog-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-control {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

textarea.form-control {
  height: 180rpx;
  padding: 20rpx;
  resize: none;
  line-height: 1.5;
}

.form-hint {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.dialog-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.dialog-button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  text-align: center;
  border: none;
}

.picker-control {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-control::after {
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
}

/* 动画定义 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式调整 */
@media (max-width: 375rpx) {
  .info-grid {
    grid-template-columns: 1fr;
  }
  
  .info-item {
    grid-column: span 1 !important;
  }
  
  .equipment-image {
    width: 220rpx;
    height: 220rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .primary-button, .secondary-button, .danger-button {
    width: 100%;
  }
}
