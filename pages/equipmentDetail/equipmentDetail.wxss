/* 导航栏样式保持不变 */
.custom-nav {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.nav-right {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 新增编辑按钮样式 */
.edit-button-container {
  padding: 0 24rpx 24rpx;
}

.edit-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  background-color: #1677ff;
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(22, 119, 255, 0.2);
}

.edit-button::after {
  border: none;
}

/* 加载状态保持不变 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid #f3f3f3;
  border-top: 5rpx solid #1677ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 容器和卡片样式保持不变 */
.equipment-container {
  padding: 24rpx;
}

.status-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.status-card-header {
  margin-bottom: 24rpx;
}

.equipment-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.equipment-type {
  font-size: 28rpx;
  color: #666;
}

.status-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.status-available {
  background-color: #e6f7ee;
  color: #00b42a;
}

.status-borrowed {
  background-color: #fff7e6;
  color: #ff7d00;
}

.equipment-id {
  font-size: 24rpx;
  color: #999;
}

/* 信息卡片样式保持不变 */
.info-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.info-card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  padding: 24rpx 32rpx;
  border-bottom: 1px solid #f5f5f5;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1px;
  background-color: #f5f5f5;
}

.info-item {
  background-color: #fff;
  padding: 24rpx 32rpx;
}

.info-list {
  background-color: #fff;
}

.info-list-item {
  display: flex;
  padding: 24rpx 32rpx;
  border-bottom: 1px solid #f5f5f5;
}

.info-list-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.light-card {
  background-color: #fafafa;
}

.light-text {
  color: #999;
  font-size: 26rpx;
}

/* 操作按钮区样式保持不变 */
.action-buttons {
  padding: 24rpx;
}

.main-action-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 24rpx;
}

.btn-borrow {
  background-color: #1677ff;
  color: #fff;
}

.btn-return {
  background-color: #00b42a;
  color: #fff;
}

.btn-restore {
  background-color: #ff7d00;
  color: #fff;
}

.secondary-actions {
  display: flex;
  gap: 24rpx;
}

.secondary-action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: none;
}

.btn-delete {
  background-color: #f5f5f5;
  color: #f53f3f;
}

/* 对话框样式保持不变 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.borrow-dialog {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 101;
  padding-bottom: env(safe-area-inset-bottom);
}

.dialog-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1px solid #f5f5f5;
}

.dialog-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.dialog-close {
  font-size: 40rpx;
  color: #999;
}

.dialog-content {
  padding: 32rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-control {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border: 1px solid #eee;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-view {
  display: flex;
  align-items: center;
  color: #999;
}

.dialog-footer {
  display: flex;
  padding: 24rpx 32rpx;
  gap: 24rpx;
}

.dialog-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #1677ff;
  color: #fff;
}

/* 适配小屏幕 */
@media (max-width: 320px) {
  .edit-button {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
  }
  
  .main-action-btn {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
  }
}