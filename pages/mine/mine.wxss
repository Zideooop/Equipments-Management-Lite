/* 基础样式 */
.container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
  font-size: 28rpx;
}

/* 用户信息头部 */
.user-header {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: var(--bg-primary);
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-primary);
  display: flex;
  align-items: center;
}

.admin-tag {
  width: 50rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.user-role {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 10rpx;
}

.login-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 功能列表 */
.function-list {
  padding: 0 10rpx;
}

.function-group {
  background-color: var(--bg-primary);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 合并后的器材管理中心入口样式强化 */
.function-group:first-child .function-item:first-child {
  background: linear-gradient(90deg, rgba(7, 193, 96, 0.05) 0%, rgba(7, 193, 96, 0) 100%);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.2s;
}

.function-item:active {
  background-color: var(--bg-tertiary);
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 25rpx;
}

/* 同步中图标旋转动画 */
.sync-loading {
  animation: rotate 1.5s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.function-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-primary);
}

.arrow-icon {
  width: 24rpx;
  height: 44rpx;
  opacity: 0.5;
}

.sync-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-right: 20rpx;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: var(--bg-primary);
  color: var(--danger-color);
  border: 1rpx solid var(--danger-color);
  border-radius: 16rpx;
  font-size: 30rpx;
}

/* 底部信息 */
.footer {
  text-align: center;
  padding: 40rpx 0;
  color: var(--text-tertiary);
  font-size: 24rpx;
}

.version {
  margin-bottom: 10rpx;
}
    