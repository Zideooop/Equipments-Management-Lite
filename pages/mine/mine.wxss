/* 我的页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box; /* 确保padding不会导致溢出 */
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #3498db, #2980b9);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
}
.user-card:not([bindtap]) {
  cursor: default;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 25rpx;
  overflow: hidden;
}

/* 用户头像图片样式 */
.avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.user-action {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

/* 箭头图标样式 - 按规范调整为32×32px */
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
  opacity: 0.9;
  transition: all 0.2s ease;
}

/* 功能列表 */
.function-list {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
  transition: background-color 0.2s;
}

.function-item:last-child {
  border-bottom: none;
}

/* 功能图标样式 - 按规范调整为40×40px（80rpx） */
.function-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

/* 功能图标颜色设置 */
.function-icon.recycle {
  color: #666; /* 回收站图标 */
}

.function-icon.sync {
  color: #666; /* 同步图标 */
}

.function-icon.about {
  color: #666; /* 关于图标 */
}

/* 功能图标点击效果 */
.function-item:active .function-icon {
  transform: scale(0.9);
}

.function-item:active .function-icon.sync {
  color: #07c160; /* 同步图标点击状态 */
}

.function-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.function-badge {
  font-size: 26rpx;
  color: #1677ff;
  margin-right: 20rpx;
}

.function-desc {
  font-size: 26rpx;
  color: #999;
  margin-right: 20rpx;
}

/* 退出按钮 */
.logout-btn {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  color: #f53f3f;
  border-radius: 20rpx;
  font-size: 32rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

/* 退出按钮图标 - 按规范调整为40×40px（80rpx） */
.logout-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
  color: #f53f3f;
  transition: all 0.2s ease;
}

/* 退出按钮点击效果 */
.logout-btn:active {
  background-color: #fff5f5;
  transform: scale(0.98);
}

.logout-btn:active .logout-icon {
  transform: scale(0.9);
}

/* 交互反馈效果 */
.function-item:active {
  background-color: #f5f5f5;
}

/* 解决与TabBar重叠问题 */
.function-list {
  padding-bottom: 20rpx;
}

.container {
  padding-bottom: 100rpx; /* 确保内容不被TabBar遮挡 */
}
    