.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 欢迎区域 - 优化用户头像显示 */
.welcome-section {
  padding: 60rpx 30rpx 40rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
  border-radius: 0 0 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.welcome-subtext {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 用户头像样式 - 替换右侧图标 */
.welcome-extra {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  background-color: white;
  padding: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 游客头像和普通用户头像统一样式 */
.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

/* 移除原天气图标样式 */
.welcome-icon {
  display: none;
}

/* 统计卡片 - 增强视觉层次 */
.stats-container {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin: -20rpx 30rpx 0;
}

.stat-card {
  flex: 1;
  margin: 0 15rpx;
  padding: 25rpx 0;
  background-color: white;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s, box-shadow 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-card:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.08);
}

/* 卡片顶部标识线 - 增强识别度 */
.stat-card.total {
  border-top: 6rpx solid #3498db;
}

.stat-card.available {
  border-top: 6rpx solid #2ecc71;
}

.stat-card.borrowed {
  border-top: 6rpx solid #e67e22;
}

/* 统计卡片图标 - 优化显示效果 */
.stat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 15rpx;
  display: block;
  filter: drop-shadow(0 2rpx 2rpx rgba(0, 0, 0, 0.1));
}

/* 数值样式 - 增强视觉重点 */
.stat-value {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  line-height: 1.2;
}

/* 数值颜色 - 统一主题色应用 */
.stat-card.total .stat-value {
  color: #3498db;
}

.stat-card.available .stat-value {
  color: #2ecc71;
}

.stat-card.borrowed .stat-value {
  color: #e67e22;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  letter-spacing: 0.5rpx;
}

/* 通用区域样式 - 优化阴影效果 */
.section {
  margin: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: box-shadow 0.3s;
}

.section:hover {
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

/* 操作记录图标容器 */
.operation-icon-container {
  margin-right: 15rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 操作图标样式 - 调整为统一的log.png图标大小 */
.operation-icon {
  width: 36rpx;
  height: 36rpx;
  color: #999;
}

/* 活动列表 - 优化布局和间距 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.activity-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  align-items: center;
  transition: background-color 0.2s;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-item:active {
  background-color: #f9f9f9;
}

/* 操作记录图标容器 - 调整大小 */
.activity-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 操作记录图标 - 调整大小 */
.activity-icon img {
  width: 36rpx;
  height: 36rpx;
}

/* 活动类型图标背景色优化 */
.activity-icon-add {
  background-color: rgba(46, 204, 113, 0.15);
}

.activity-icon-lend {
  background-color: rgba(230, 126, 34, 0.15);
}

.activity-icon-return {
  background-color: rgba(52, 152, 219, 0.15);
}

.activity-icon-delete {
  background-color: rgba(231, 76, 60, 0.15);
}

.activity-content {
  flex: 1;
}

.activity-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  line-height: 1.4;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

/* 无操作记录样式 - 调整空状态图标大小 */
.empty-activity {
  padding: 80rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-activity-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 悬浮按钮和菜单 - 优化交互体验 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #3498db;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 15rpx rgba(52, 152, 219, 0.3);
  z-index: 100;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab.open {
  transform: rotate(45deg);
  background-color: #f53f3f;
  box-shadow: 0 6rpx 15rpx rgba(245, 63, 63, 0.3);
}

.fab-icon {
  width: 50rpx;
  height: 50rpx;
}

.fab-menu {
  position: fixed;
  right: 40rpx;
  bottom: 190rpx;
  z-index: 99;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  opacity: 0;
  transform: translateY(20rpx);
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab-menu.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.fab-item {
  width: 180rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 50rpx;
  text-align: center;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: transform 0.2s;
}

.fab-item:active {
  transform: scale(0.95);
}

.menu-item-icon {
  width: 40rpx;
  height: 40rpx;
}
