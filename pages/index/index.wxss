.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 欢迎区域 - 优化用户头像显示 */
.welcome-section {
  padding: 60rpx 30rpx 40rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
  border-radius: 0 0 30rpx 30rpx;
  display: flex;
}

.welcome-content {
  flex: 1;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.welcome-subtext {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.welcome-extra {
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

/* 统计卡片样式 */
.stats-container {
  display: flex;
  padding: 20rpx 15rpx;
  gap: 15rpx;
}

.stat-card {
  flex: 1;
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx 15rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 15rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

/* 区域标题样式 */
.section-title {
  padding: 25rpx 30rpx 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.sync-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.sync-success {
  color: #07c160;
  font-size: 24rpx;
}

.sync-failed {
  color: #f53f3f;
  font-size: 24rpx;
}

.sync-default {
  color: #999;
  font-size: 24rpx;
}

.sync-time {
  color: #999;
  font-size: 22rpx;
}

/* 活动记录样式 */
.activity-list-container {
  padding: 0 30rpx 20rpx;
}

.operation-icon-container {
  margin-right: 15rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 操作图标样式 - 调整为统一的log.png图标大小 */
.operation-icon {
  width: 36rpx;
  height: 36rpx;
  color: #999;
}

/* 活动列表 - 优化布局和间距 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.activity-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  align-items: center;
  transition: background-color 0.2s;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-item:active {
  background-color: #f9f9f9;
}

/* 操作记录图标容器 - 调整大小 */
.activity-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
}

/* 操作记录图标 - 调整大小 */
.activity-icon-img {
  width: 36rpx;
  height: 36rpx;
}

/* 活动类型图标背景色优化 */
.activity-icon-add {
  background-color: rgba(46, 204, 113, 0.15);
}

.activity-icon-lend {
  background-color: rgba(230, 126, 34, 0.15);
}

.activity-icon-return {
  background-color: rgba(52, 152, 219, 0.15);
}

.activity-icon-delete {
  background-color: rgba(231, 76, 60, 0.15);
}

.activity-icon-restore {
  background-color: rgba(155, 89, 182, 0.15);
}

.activity-icon-other {
  background-color: rgba(149, 165, 166, 0.15);
}

/* 活动类型标签 */
.activity-badge {
  position: absolute;
  bottom: -5rpx;
  right: -5rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  color: white;
  font-size: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.activity-icon-add .activity-badge {
  background-color: #2ecc71;
}

.activity-icon-lend .activity-badge {
  background-color: #e67e22;
}

.activity-icon-return .activity-badge {
  background-color: #3498db;
}

.activity-icon-delete .activity-badge {
  background-color: #e74c3c;
}

.activity-icon-restore .activity-badge {
  background-color: #9b59b6;
}

.activity-icon-other .activity-badge {
  background-color: #7f8c8d;
}

.activity-content {
  flex: 1;
}

.activity-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  line-height: 1.4;
}

.view-detail {
  color: #3498db;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

/* 无操作记录样式 - 调整空状态图标大小 */
.empty-activity {
  padding: 80rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-activity-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 悬浮按钮和菜单 - 优化交互体验 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #3498db;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 15rpx rgba(52, 152, 219, 0.3);
  z-index: 100;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab.open {
  transform: rotate(45deg);
  background-color: #f53f3f;
  box-shadow: 0 6rpx 15rpx rgba(245, 63, 63, 0.3);
}

.fab-icon {
  width: 50rpx;
  height: 50rpx;
}

.fab-menu {
  position: fixed;
  right: 40rpx;
  bottom: 190rpx;
  z-index: 99;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  opacity: 0;
  transform: translateY(20rpx);
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab-menu.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.fab-item {
  width: 180rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 50rpx;
  text-align: center;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: transform 0.2s;
}

.fab-item:active {
  transform: scale(0.95);
}

.menu-item-icon {
  width: 40rpx;
  height: 40rpx;
}