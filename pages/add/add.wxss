/* pages/add/add.wxss */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  padding: 30rpx 30rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 表单容器 */
.form-container {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.form-card {
  width: 100%;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

/* 卡片标签 */
.card-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
}

.required {
  color: #ff3b30;
  font-size: 28rpx;
  margin-left: 8rpx;
}

/* 卡片内容 */
.card-content {
  width: 100%;
  display: flex;
  align-items: center;
}

/* 输入框样式 */
.card-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0;
  line-height: 1.5;
}

/* 选择框样式 */
.select-content {
  justify-content: space-between;
}

.select-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.select-arrow {
  width: 24rpx;
  height: 44rpx;
  opacity: 0.5;
}

/* 数量操作区 */
.quantity-content {
  align-items: center;
  padding: 5rpx 0;
}

.quantity-btn {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.minus {
  background-color: #f5f5f7;
  color: #666;
}

.plus {
  background-color: #007aff;
  color: #fff;
}

.quantity-input {
  width: 120rpx;
  height: 70rpx;
  margin: 0 20rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

/* 备注区域 */
.remarks-content {
  flex-direction: column;
  align-items: flex-start;
}

.card-textarea {
  width: 100%;
  min-height: 120rpx;
  max-height: 300rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  padding: 10rpx 0;
}

.text-count {
  align-self: flex-end;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* 自定义输入框卡片 */
.custom-input-card {
  margin-top: -10rpx;
  margin-bottom: 15rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #f9f9f9;
}

.custom-input-content {
  width: 100%;
  display: flex;
  align-items: center;
}

.custom-input {
  flex: 1;
  height: 80rpx;
  padding: 0 15rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.confirm-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 15rpx;
  padding: 0;
  background-color: #007aff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 扫码按钮 */
.scan-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  margin-left: 15rpx;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 操作按钮 */
.form-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  box-sizing: border-box;
}

.btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.cancel-btn {
  background-color: #f5f5f7;
  color: #333;
}

.save-btn {
  background-color: #007aff;
  color: #fff;
}

/* 选择器样式 */
.picker-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}

.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-view {
  position: relative;
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
}

.picker-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-title-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.picker-cancel, .picker-confirm {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.picker-cancel {
  color: #666;
}

.picker-confirm {
  color: #007aff;
}

.picker-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}
    