/* 引入全局样式变量 */
@import "../../app.wxss";

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 导航栏复用全局样式 */
.custom-nav {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.nav-back, .nav-right {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单组样式 */
.form-group {
  margin-bottom: 36rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.required-mark {
  color: #ff4d4f;
}

/* 输入框样式统一 */
.form-control {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border: 1px solid #eee;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.form-control.error {
  border-color: #ff4d4f;
}

/* 带操作按钮的输入框 */
.input-with-action {
  position: relative;
}

.action-btn {
  position: absolute;
  right: 0;
  top: 0;
  height: 88rpx;
  width: 88rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  color: #1677ff;
}

/* 选择器样式 */
.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
}

.picker-text {
  flex: 1;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-view::after {
  content: "▾";
  color: #999;
  font-size: 24rpx;
}

/* 数量控制器 */
.quantity-control {
  display: flex;
  align-items: center;
  border: 1px solid #eee;
  border-radius: 16rpx;
  overflow: hidden;
}

.quantity-control.error {
  border-color: #ff4d4f;
}

.quantity-btn {
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background-color: #f5f5f5;
  color: #333;
  font-size: 36rpx;
  border: none;
}

.quantity-btn:disabled {
  color: #ccc;
  background-color: #fafafa;
}

.quantity-input {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  margin: 0;
  padding: 0;
}

/* 文本域样式 */
.textarea {
  min-height: 140rpx;
  height: auto;
  line-height: 1.6;
  padding: 20rpx 24rpx;
  resize: none;
}

/* 字数统计 */
.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 错误提示 */
.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
  line-height: 1.4;
}

/* 底部按钮组 */
.bottom-btn-group {
  display: flex;
  padding: 24rpx;
  gap: 24rpx;
  box-sizing: border-box;
}

.dialog-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #1677ff;
  color: #fff;
}

/* 帮助弹窗 */
.help-dialog {
  width: 85%;
  max-width: 500rpx;
  max-height: 70vh;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  position: fixed;
  background-color: #fff;
  border-radius: 32rpx;
  z-index: 101;
  padding-bottom: env(safe-area-inset-bottom);
}

.help-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.help-item:last-child {
  margin-bottom: 0;
}