/* 导航栏样式优化 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.nav-left, .nav-right {
  display: flex;
  align-items: center;
  width: 120rpx;
}

.nav-left {
  justify-content: flex-start;
}

.nav-right {
  justify-content: flex-end;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.back-text, .filter-text {
  font-size: 28rpx;
  color: #333;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  text-align: center;
}

/* 搜索框样式优化 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 60rpx;
  padding: 15rpx 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 15rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
}

/* 快捷筛选栏 - 新增样式 */
.quick-filter {
  display: flex;
  padding: 15rpx 30rpx;
  background-color: #fff;
  gap: 15rpx;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-chip {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}

.filter-chip.active {
  background-color: #3498db;
  color: #fff;
}

/* 筛选面板样式优化 */
.filter-panel {
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.filter-panel.visible {
  opacity: 1;
  pointer-events: auto;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.filter-title-main {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.filter-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  width: 30rpx;
  height: 30rpx;
  color: #999;
}

.filter-content {
  background-color: #fff;
  padding: 30rpx;
  max-height: calc(100% - 180rpx);
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 5rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  padding: 15rpx 25rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}

.filter-option.active {
  background-color: #e8f4fd;
  color: #3498db;
  border: 1rpx solid #3498db;
}

.option-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.filter-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

.reset-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
  border: none;
}

.confirm-btn {
  background-color: #3498db;
  color: #fff;
  border: none;
}

/* 设备列表样式优化 */
.equipment-list {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  min-height: calc(100vh - 320rpx);
}

.loading-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-indicator {
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid #eee;
  border-top-color: #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.empty-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.empty-btn {
  background-color: #3498db;
  color: #fff;
  border: none;
  padding: 15rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 设备网格布局优化 */
.equipment-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(340rpx, 1fr));
  gap: 20rpx;
}

.equipment-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.equipment-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-available {
  background-color: #e6f7f0;
  color: #07c160;
}

.status-borrowed {
  background-color: #fff7e6;
  color: #ff9800;
}

.equipment-info {
  margin-top: 10rpx;
}

.equipment-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
  padding-right: 60rpx;
}

.equipment-type, .equipment-spec, .equipment-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

