.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.system-logo {
  margin-top: 80rpx;
  margin-bottom: 30rpx;
}

.logo-img {
  width: 160rpx;
  height: 160rpx;
}

.system-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
}

.card {
  width: 100%;
  max-width: 500rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-row {
  display: flex;
  align-items: center;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 90rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.form-input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0 30rpx;
  font-size: 26rpx;
}

.remember-password {
  display: flex;
  align-items: center;
  color: #666;
}

.remember-password checkbox {
  margin-right: 10rpx;
}

.forgot-password {
  color: #007aff;
  text-decoration: none;
}

.btn {
  width: 100%;
  height: 90rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background-color: #007aff;
  color: #fff;
}

.btn-loading {
  background-color: #007aff;
  color: #fff;
  opacity: 0.8;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s linear infinite;
  margin-right: 15rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 分隔线样式 */
.divider {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: #eee;
}

.divider-text {
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #999;
}

.wechat-login {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  color: #666;
  font-size: 28rpx;
  background: transparent;
  padding: 0;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.error-message {
  display: flex;
  align-items: center;
  color: #ff3b30;
  font-size: 26rpx;
  margin-top: 20rpx;
  padding: 0 10rpx;
}

.error-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 快捷登录样式 */
.quick-login {
  text-align: right;
  font-size: 24rpx;
  color: #007aff;
  margin-bottom: 10rpx;
  padding-right: 10rpx;
}

/* 游客登录样式 */
.visitor-login {
  background-color: #f0f7ff;
  color: #0066cc;
  border: 1rpx solid #cce0ff;
  margin-bottom: 20rpx;
}

.visitor-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

/* 管理员入口样式 */
.admin-entry {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #e67700;
  font-size: 26rpx;
  padding: 15rpx;
  background-color: #fff8e6;
  border-radius: 8rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.admin-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 注册入口样式 */
.register-section {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.register-link {
  color: #007aff;
  margin-left: 10rpx;
  text-decoration: none;
}
