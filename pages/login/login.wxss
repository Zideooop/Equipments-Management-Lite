.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.system-logo {
  margin-top: 80rpx;
  margin-bottom: 30rpx;
}

.logo-img {
  width: 160rpx;
  height: 160rpx;
}

.system-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
}

.card {
  width: 100%;
  max-width: 500rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-row {
  display: flex;
  align-items: center;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 90rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.form-input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0 30rpx;
  font-size: 26rpx;
}

.remember-password {
  display: flex;
  align-items: center;
  color: #666;
}

.remember-password checkbox {
  margin-right: 10rpx;
}

.forgot-password {
  color: #007aff;
  text-decoration: none;
}

.btn {
  width: 100%;
  height: 90rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background-color: #007aff;
  color: #fff;
}

.btn-loading {
  background-color: #007aff;
  color: #fff;
  opacity: 0.8;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s linear infinite;
  margin-right: 15rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.wechat-login {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1px solid #eee;
  color: #666;
  font-size: 28rpx;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.error-message {
  display: flex;
  align-items: center;
  color: #ff3b30;
  font-size: 26rpx;
  margin-top: 20rpx;
  padding: 0 10rpx;
}

.error-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.debug-entries {
  margin-top: 20rpx;
  width: 100%;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
  margin-bottom: 20rpx;
}

.admin-entry {
  color: #999;
  font-size: 24rpx;
  text-align: center;
  margin-top: 10rpx;
}