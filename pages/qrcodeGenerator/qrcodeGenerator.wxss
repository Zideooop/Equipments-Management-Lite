/* pages/equipmentHub/equipmentHub.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 20rpx;
  box-sizing: border-box;
}

.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin: 30rpx 0 40rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.form-control {
  width: 100%;
  background-color: #f9f9f9;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s;
}

.form-control:focus {
  border-color: #07c160;
  background-color: #fff;
}

.qrcode-container {
  width: 300rpx;
  height: 300rpx;
  margin: 30rpx auto;
  padding: 15rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: center;
  align-items: center;
}

.qrcode-image {
  width: 270rpx;
  height: 270rpx;
}

.qrcode-desc {
  text-align: center;
  color: #888;
  font-size: 24rpx;
  margin-top: 20rpx;
  line-height: 1.5;
}

.equipment-info {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  padding: 15rpx 0;
  border-bottom: 1px dashed #eee;
  margin-bottom: 20rpx;
}

.bottom-btn-group {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
}

.btn {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.btn:active {
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #fff;
  color: #333;
  border: 1px solid #ddd;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
}

/* 加载动画样式 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 5rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s ease-in-out infinite;
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}