/* 全局变量定义 */
:root {
  /* 主题色 */
  --primary-color: #3498db;
  --primary-light: #ebf5fb;
  --primary-dark: #2980b9;
  --danger-color: #f53f3f;
  --success-color: #07c160;
  --warning-color: #ff9800;
  --success-light: #e6f7f0;
  --warning-light: #fff7e6;
  
  /* 文本与背景色 */
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --bg-primary: #ffffff;
  --bg-secondary: #f5f5f5;
  --bg-tertiary: #eeeeee;
  --border-color: #e5e5e5;
  
  /* 尺寸变量 */
  --border-radius-sm: 12rpx;
  --border-radius: 20rpx;
  --border-radius-lg: 30rpx;
  --border-radius-full: 50%;
  
  /* 间距变量 */
  --spacing-xs: 10rpx;
  --spacing-sm: 20rpx;
  --spacing-md: 30rpx;
  --spacing-lg: 40rpx;
  
  /* 悬浮按钮尺寸 */
  --fab-size: 120rpx;
  --fab-icon-size: 60rpx;
  --fab-menu-item-height: 80rpx;
  
  /* 过渡动画 */
  --transition-fast: all 0.2s ease;
  --transition-normal: all 0.3s ease;
}

/* 基础样式重置 */
view, text, button, image {
  box-sizing: border-box;
}

page {
  background-color: var(--bg-secondary);
  font-size: 32rpx;
  line-height: 1.6;
  color: var(--text-primary);
}

/* 全局样式类 */
.bg-primary { background-color: var(--bg-primary); }
.bg-secondary { background-color: var(--bg-secondary); }
.text-primary { color: var(--text-primary); }
.text-accent { color: var(--primary-color); }
.border-normal { border-color: var(--border-color); }
.hidden { display: none !important; }

/* 导航栏样式 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

/* 按钮基础样式 */
button {
  border: none;
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  font-size: 30rpx;
}

button::after {
  border: none;
}

/* 搜索框样式 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 60rpx;
  padding: 15rpx 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: box-shadow 0.3s;
}

.search-box:focus-within {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.search-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 15rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 快捷筛选栏 */
.quick-filter {
  display: flex;
  padding: 15rpx 30rpx;
  background-color: #fff;
  gap: 15rpx;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-chip {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
}

.filter-chip.active {
  background-color: var(--primary-color);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.3);
}

/* 重置筛选按钮区别化设计 */
.filter-chip.reset-filter {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #eee;
  margin-left: 10rpx;
}

.filter-chip.reset-filter:hover {
  background-color: #f9f9f9;
}

/* 设备列表样式 */
.equipment-list {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  min-height: calc(100vh - 320rpx);
}

/* 加载状态 */
.loading-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-indicator {
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid #eee;
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 空状态 */
.empty-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.empty-btn {
  background-color: var(--primary-color);
  color: #fff;
  border: none;
  padding: 15rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  transition: background-color 0.2s;
}

.empty-btn:hover {
  background-color: var(--primary-dark);
}

/* 设备网格布局 */
.equipment-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(340rpx, 1fr));
  gap: 20rpx;
}

/* 设备卡片样式 */
.equipment-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s;
  overflow: hidden;
}

.equipment-card:hover {
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

/* 设备状态标签 */
.equipment-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: white;
}

.status-available {
  background-color: var(--success-color);
}

.status-borrowed {
  background-color: var(--warning-color);
}

.status-other {
  background-color: var(--text-tertiary);
}

/* 设备信息样式 */
.equipment-info {
  padding-top: 10rpx;
}

.equipment-name {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: var(--text-primary);
}

.equipment-type,
.equipment-spec,
.equipment-location {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}


/* 回到顶部按钮 */
.back-to-top {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 997;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s ease;
}

.back-to-top.show {
  opacity: 1;
  pointer-events: auto;
}

.back-to-top-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 首页样式补充 */
.page-header {
  padding: 40rpx 30rpx;
  background-color: var(--primary-color);
  color: white;
}

.page-title {
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  display: block;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.stats-container {
  display: flex;
  padding: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  margin: -30rpx 30rpx 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.stat-card {
  flex: 1;
  text-align: center;
  padding: 0 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.sync-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.sync-info text {
  font-size: 24rpx;
}

.sync-success {
  color: var(--success-color);
}

.sync-failed {
  color: var(--danger-color);
}

.sync-default {
  color: var(--text-secondary);
}

.sync-time {
  color: var(--text-tertiary);
}

.activity-list-container {
  background-color: white;
  margin-bottom: 30rpx;
}

.activity-list {
  padding: 10rpx 30rpx;
}

.activity-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  align-items: center;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  position: relative;
  margin-right: 20rpx;
}

.activity-icon-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.activity-badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: var(--danger-color);
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.activity-content {
  flex: 1;
}

.activity-text {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-detail {
  font-size: 24rpx;
  color: var(--primary-color);
}

.activity-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.empty-activity {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
  color: var(--text-tertiary);
}

.empty-activity-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}