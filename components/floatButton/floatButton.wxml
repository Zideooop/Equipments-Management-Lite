<view 
  class="float-btn {{isOpen ? 'open' : ''}}" 
  bindtap="toggleMenu"
  hover-class="btn-hover"
  style="background-color: {{isOpen ? openColor : mainColor}}"
>
  <text class="btn-icon">+</text>
</view>

<!-- 增加容错处理：当menuItems为空时不渲染菜单容器 -->
<view 
  class="menu-container {{isOpen ? 'menu-open' : ''}}"
  wx:if="{{menuItems.length > 0}}"
>
  <view 
    wx:for="{{menuItems}}" 
    wx:key="index" 
    class="menu-item"
    style="animation-delay: {{index * 0.1}}s"
    bindtap="handleMenuClick"
    data-index="{{index}}"
  >
    <text class="menu-icon">{{item.icon || '●'}}</text> <!-- 提供默认图标 -->
    <text class="menu-text">{{item.text}}</text>
  </view>
</view>
    