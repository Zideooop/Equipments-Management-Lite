.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1000;
}

.action-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
}

.action-sheet-item {
  padding: 24rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
  font-size: 32rpx;
}

.action-sheet-cancel {
  padding: 24rpx;
  text-align: center;
  margin-top: 16rpx;
  background: #f5f5f5;
  border-radius: 16rpx 16rpx 0 0;
  font-size: 32rpx;
  color: #666;
}
