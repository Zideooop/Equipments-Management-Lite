/* pages/manage/manage.wxss */
.status-options {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.status-option {
  padding: 6px 14px;
  background-color: #f5f5f5;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
  cursor: pointer;
}

.status-option.active {
  background-color: #1677ff;
  color: white;
}

.list-item-title {
  display: flex;
  align-items: center;
  gap: 8px;
}

.fab {
  position: fixed;
  right: 20px;
  bottom: 80px;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background-color: #1677ff;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  box-shadow: 0 4px 12px rgba(22, 119, 255, 0.4);
  z-index: 999;
}
    