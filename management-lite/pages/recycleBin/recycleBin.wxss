.container {
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 顶部工具栏 */
.toolbar {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 60rpx;
  padding: 12rpx 20rpx;
  margin-right: 15rpx;
}

.search-input input {
  flex: 1;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
}

.clear-btn {
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #f5222d;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 回收站列表 */
.recycle-list {
  padding: 10rpx 0;
}

.recycle-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.item-info {
  flex: 1;
}

.item-name {
  margin-bottom: 10rpx;
}

.item-name text {
  font-size: 32rpx;
  color: #333;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.delete-time {
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #999;
}

.item-details {
  display: flex;
  flex-wrap: wrap;
}

.detail-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 5rpx;
}

.item-actions {
  display: flex;
  gap: 10rpx;
}

.restore-btn {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1px solid #b7eb8f;
}

.delete-btn {
  background-color: #fff1f0;
  color: #f5222d;
  border: 1px solid #ffccc7;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-image {
  width: 240rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  max-width: 60%;
}

/* 加载中 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading-state loading {
  margin-bottom: 20rpx;
}
