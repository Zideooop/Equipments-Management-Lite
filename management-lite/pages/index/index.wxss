.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 120rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-name {
  flex: 1;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  display: flex;
  align-items: center;
}

.guest-tag {
  font-size: 24rpx;
  color: #fff;
  background-color: #faad14;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
}

.sync-btn {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.sync-btn text {
  margin-left: 8rpx;
}

/* 统计卡片 */
.stats-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 15rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.stat-card {
  width: 50%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}

.stat-card:nth-child(2n) {
  border-right: none;
}

.stat-card:nth-child(n+3) {
  border-bottom: none;
}

.stat-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-icon {
  margin-top: 10rpx;
}

/* 通用区块样式 */
.section {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

/* 活动列表 */
.activity-list {
  padding: 10rpx 30rpx;
}

.activity-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  margin-right: 20rpx;
  padding-top: 5rpx;
}

.activity-content {
  flex: 1;
}

.activity-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  line-height: 1.4;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

.empty-activity {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.4);
  z-index: 99;
}
