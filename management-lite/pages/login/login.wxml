<view class="container">
  <view class="login-box">
    <view class="logo">
      <text class="logo-text">器材管理系统</text>
    </view>
    
    <view class="form-group">
      <view class="input-item">
        <view class="input-icon">
          <icon type="user" size="24" color="#666" />
        </view>
        <input 
          type="text" 
          placeholder="请输入用户名" 
          value="{{username}}"
          bindinput="handleUsernameInput"
          class="input-content"
        />
      </view>
      
      <view class="input-item">
        <view class="input-icon">
          <icon type="lock" size="24" color="#666" />
        </view>
        <input 
          type="{{showPassword ? 'text' : 'password'}}" 
          placeholder="请输入密码" 
          value="{{password}}"
          bindinput="handlePasswordInput"
          class="input-content"
        />
        <view class="toggle-btn" bindtap="togglePasswordVisibility">
          <icon type="{{showPassword ? 'eye-o' : 'eye'}}" size="20" color="#999" />
        </view>
      </view>
      
      <view class="error-message" wx:if="{{errorMsg}}">{{errorMsg}}</view>
      
      <button 
        bindtap="handleLogin" 
        class="login-btn"
        loading="{{isLoading}}"
        disabled="{{isLoading}}"
      >
        账号登录
      </button>
      
      <button 
        bindtap="wechatLogin" 
        class="wechat-login-btn"
        loading="{{isLoading}}"
        disabled="{{isLoading}}"
      >
        <image src="/images/wechat.png" class="wechat-icon" />
        微信快捷登录
      </button>
      
      <button 
        bindtap="guestLogin" 
        class="guest-login-btn"
        loading="{{isLoading}}"
        disabled="{{isLoading}}"
      >
        游客模式进入
      </button>
    </view>
    
    <view class="link-group">
      <navigator url="/pages/register/register" class="link-item">注册账号</navigator>
      <view class="link-separator">|</view>
      <view bindtap="handleForgotPassword" class="link-item">忘记密码</view>
    </view>
  </view>
</view>
